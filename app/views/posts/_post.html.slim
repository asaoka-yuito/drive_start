.col-sm-12.col-lg-4.mb-3.bg-warning
  .card
    .card-body
      h4.card-title
        = post.title
      .mr10.float-right
        a.i.fas.trash.pr-1
        a.i.fa.pen
      ul.list-inline
        li.list-inline-item
          i.far.user
          = post.user.decorate.full_name
        li.list-inline-item
          i.far.calendar
          = l post.created_at, format: :long
        li.list-inline-item
          - if current_user.own?(post)
            == render 'crud_menus', post: post
          else
            == render 'bookmark_button', post: post
      p.card-text
        = post.body